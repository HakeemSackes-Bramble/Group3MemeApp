    <ImageView
        android:id="@+id/download_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/placeholder"
        android:layout_marginLeft="@dimen/large_margin"
