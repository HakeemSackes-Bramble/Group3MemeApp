<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inner_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inner_title"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/inner_sub_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inner_sub_heading"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/inner_gallery_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_from_gallery" />

    <LinearLayout
        android:id="@+id/inner_photo"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/inner_image_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/first_pic_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Me"
                android:textAlignment="center"
                android:textColor="@color/textIcons"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inner_image_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/second_pic_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Inner Me"
                android:textAlignment="center"
                android:textColor="@color/textIcons"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:src="@drawable/share" />

        <Button
            android:id="@+id/finished_btn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/share_btn"
            android:gravity="center"
            android:onClick="selectSaveFromGallery"
            android:text="FINISHED" />


        <ImageView
            android:id="@+id/download_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/download" />
    </LinearLayout>

</LinearLayout>