<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/inner_tv"
        android:text="@string/inner_title"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/inner_sub_head"
        android:text="@string/inner_sub_heading"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/inner_gallery_btn"
        android:text="@string/select_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/inner_iv"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <Button
        android:id="@+id/save_photo"
        android:text="@string/save_photo"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>